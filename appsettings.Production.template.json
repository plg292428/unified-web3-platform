{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=UnifiedWeb3Platform;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Audience": "UnifiedWeb3Platform",
    "Issuer": "UnifiedWeb3Platform Server",
    "SecurityKey": "CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_AT_LEAST_32_CHARACTERS"
  },
  "TronSettings": {
    "Network": "MainNet",
    "ApiKey": "YOUR_TRON_API_KEY_IF_NEEDED"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "yourdomain.com;www.yourdomain.com",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001",
        "Certificate": {
          "Path": "path/to/certificate.pfx",
          "Password": "certificate-password"
        }
      }
    }
  }
}


